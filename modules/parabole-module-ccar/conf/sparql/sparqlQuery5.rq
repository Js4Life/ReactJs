PREFIX mpb-root-main: <http://www.mindparabole.com/ontology/finance/MPBRoot_Main#> 
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> 
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX cit:<http://www.mindparabole.com/ontology/finance/CIT_Main#>
PREFIX mpb-fin-main-ccar-14q:<http://www.mindparabole.com/ontology/finance/FRY-14Q_Main#>
PREFIX mpb-root-main-crm:<http://www.mindparabole.com/ontology/finance/CreditRiskManagement_Main#>
PREFIX mpb-fin-main-ccar:<http://www.mindparabole.com/ontology/finance/CCAR_Main#>
SELECT  ?biz (SUM(?exposure) as ?total)
WHERE {
	?reportSub_Schedule  mpb-root-main:isPartOfReportSchedule ?reportSchedule .
	?reportSchedule mpb-root-main:isPartOfReport mpb-fin-main-ccar:FRY-14Q .
	?reportSchedule rdfs:label ?label .
	?reportSub_Schedule rdfs:label ?subLabel .
	?reportSub_Schedule mpb-root-main:reportsBusinessSegment ?biz .
	?biz cit:businessSegmentRelatedWithCITTrackingSegment ?tracking .
	?tracking mpb-root-main-crm:hasCreditExposureAmount ?exposure .
}
GROUP BY ?biz